<div class="row">
  <div class="column2" style="background-color: white;">
    <% if @bill.present? %>
      <div>Bill Id: <%= @bill.bill_id %></div>

      <div>Bill Title: <a href=<%= @bill.bill_name %>> <%= @bill_name %> </a></div>
    <% end %>


    <% if @result.present? %>
      <div class="row">
        <h3> SIMILLAR BILLS </h3>

        <% @result.each do |bill| %>
          <div>Bill Id: <%= bill.bill_id %></div>

          <div>Bill Url: <a href=<%= bill.bill_name %>> <%= bill.bill_name %> </a></div>
        <% end %>
      </div>
    <% end %>

  </div>
  <div class="column1" style="background-color:#bbb;">

      <div id="live-chat">
        
        <header class="clearfix">
          
          <a href="#" class="chat-close">x</a>

          <h4>Lexis Nexis</h4>

          <span class="chat-message-counter">3</span>

        </header>

        <div class="chat">
          
          <div class="chat-history">

            <% if @query.present? %>

              <div class="chat-message clearfix">
                  
                  <img src="http://gravatar.com/avatar/2c0ad52fc5943b78d6abe069cc08f320?s=32" alt="" width="32" height="32">

                  <div class="chat-message-content clearfix">
                    

                    <h5>You</h5>

                    <p>
                      <%= @query %>
                    </p>

                  </div> <!-- end chat-message-content -->

                </div>

              <% end %>

            <hr>

            <% if @query.present? %>
              <div class="chat-message clearfix">
                
                <img src="data:image/png;base64," alt="" width="50" height="64">

                <div class="chat-message-content clearfix">
                  
                  <span class="chat-time">few seconds ago</span>

                  <h5>Lexis Nexis</h5>

                  <p>
                    <% if @answer.present? %>
                      <%= @answer %>
                    <% else %>
                      Sorry, No result found.
                    <% end %>
                  </p>

                </div> <!-- end chat-message-content -->

              </div> <!-- end chat-message -->
            <% end %>

            <hr>

          </div> <!-- end chat-history -->

          <%= form_tag(bills_path, method: :get) do %>
            <%= text_field_tag(:query, params[:query]) %>
            <%= button_tag(type: "submit", class: "btn btn-default") do %>
              <div style="display: inline-block; vertical-align: middle;"><a class="left button-text right send-message" style="text-decoration: none; z-index: 100; cursor: pointer; width: 48px; height: 48px; margin: 8px; flex: 1 1 0%; display: flex; align-items: center; text-align: center; box-shadow: rgba(25, 75, 103, 0.51) 0px 0px 2px 0px, rgba(139, 139, 139, 0.57) 0px 4px 4px 0px; border-radius: 50%; background-color: rgb(255, 255, 255);"><div style="background-color: rgb(255, 255, 255); height: 48px; width: 48px; border-radius: 50%; display: flex; align-items: center; justify-content: center;"><div class="svg-image"><svg width="25" height="24" viewBox="0 0 25 24" xmlns="http://www.w3.org/2000/svg" style="display: flex;"><g id="Symbols" fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round"><g id="Text-input" transform="translate(-353 -12)" stroke="#184A68" stroke-width="1.5"><g id="Group-3"><g id="Group-5" transform="translate(354 13)"><g id="Group-6"><polygon id="Path-4" points="0 0 6.7550151 10 23 10"></polygon><polygon id="Path-4" points="0 22 6.7550151 12 23 12"></polygon></g></g></g></g></g></svg></div></div></a></div>
            <% end %>
          <% end %>

        </div> <!-- end chat -->

      </div> <!-- end live-chat -->

  </div>
</div>

